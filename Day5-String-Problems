# 48. Lambda, Map, Filter, Reduce
from functools import reduce
nums = [1,2,3,4]
print(list(map(lambda x: x*2, nums)))
print(list(filter(lambda x: x%2==0, nums)))
print(reduce(lambda a,b: a+b, nums))

# 49. Class & Object — Student
class Student:
    def __init__(self, name, marks): self.name, self.marks = name, marks
    def average(self): return sum(self.marks)/len(self.marks)
s = Student("Vijay", [90, 85, 88])
print(s.average())

# 50. OOP Calculator
class Calc:
    def add(self,a,b): return a+b
    def sub(self,a,b): return a-b
    def mul(self,a,b): return a*b
    def div(self,a,b): return a/b
c = Calc()
print(c.add(5,2), c.mul(4,3))
